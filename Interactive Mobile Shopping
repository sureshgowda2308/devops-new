def colour():
    d1 = ['red', 'white', 'black']
    if q4==d1[0]:
        print(f"\nyou have selected {d1[0]} colour.\n")
    elif q4==d1[1]:
        print(f"\nyou have selected {d1[1]} colour.\n")
    elif q4==d1[2]:
        print(f"\nyou have selected {d1[2]} colour.\n")     


def model():
    an1 = ['128GB', '256GB', '512GB']
    if qn == an1[0]:
        print(f"\nyou have selected {an1[0]} variant.\n")
    elif qn == an1[1]:
        print(f"\nyou have selected {an1[1]} variant.\n")
    elif qn == an1[2]:
        print(f"\nyou have selected {an1[2]} variant.\n")




def iphone():
    print("\n\nBelow are your phone's specificatons:\n=====================================\n")
    print('Brand     :',q2)
    print('Model     :',q3)
